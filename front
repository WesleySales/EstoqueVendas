#include <stdio.h>
#include <stdlib.h>

void menuAdmin();
void menuUsuario();
void cadastroUsuario();
void cadastroProdutos();
void visualizarProdutos();
void visualizarVendas();
void exibirCarrinho();

int main() {
    int opcao;
    
    printf("--------------------------------------------------\n");
    printf("                     Nome da loja                 \n");
    printf("--------------------------------------------------\n");
    printf("1. Acessar como administrador\n");
    printf("2. Acessar como usuário\n");
    printf("Escolha uma opção: ");
    scanf("%d", &opcao);
    
    switch(opcao) {
        case 1:
            menuAdmin();
            break;
        case 2:
            menuUsuario();
            break;
        default:
            printf("Opção inválida!\n");
    }
    
    return 0;
}

void menuAdmin() {
    int opcao;
    printf("--------------------------------------------------\n");
    printf("                     Menu admin                   \n");
    printf("--------------------------------------------------\n");
    printf("1. Cadastro de usuário\n");
    printf("2. Cadastro de produtos (editar produtos)\n");
    printf("3. Visualizar produtos\n");
    printf("4. Visualizar vendas\n");
    printf("Escolha uma opção: ");
    scanf("%d", &opcao);
    
    // Implemente as funções de acordo com a necessidade
    switch(opcao) {
        case 1:
            cadastroUsuario();
            break;
        case 2:
            cadastroProdutos();
            break;
        case 3:
            visualizarProdutos();
            break;
        case 4:
            visualizarVendas();
            break;
        default:
            printf("Opção inválida!\n");
    }
}


#include <stdio.h>
#include <stdlib.h>
#include <string.h>

void menuAdmin();
void menuUsuario();
void cadastroUsuario();
void cadastroProdutos();
void visualizarProdutos();
void visualizarVendas();
void exibirCarrinho();
void voltarMenuAnterior();

// Estrutura para representar um item do carrinho
typedef struct {
    char nome[50];
    float preco;
    int quantidade;
} ItemCarrinho;

// Suponha que temos um carrinho com um número fixo de itens por simplicidade
#define MAX_ITENS 10
ItemCarrinho carrinho[MAX_ITENS];
int totalItens = 0; // Total de itens no carrinho

int main() {
    int opcao;
    
    printf("--------------------------------------------------\n");
    printf("                     Nome da loja                 \n");
    printf("--------------------------------------------------\n");
    printf("1. Acessar como administrador\n");
    printf("2. Acessar como usuário\n");
    printf("Escolha uma opção: ");
    scanf("%d", &opcao);
    
    switch(opcao) {
        case 1:
            menuAdmin();
            break;
        case 2:
            menuUsuario();
            break;
        default:
            printf("Opção inválida!\n");
    }
    
    return 0;
}

void menuAdmin() {
    int opcao;
    printf("--------------------------------------------------\n");
    printf("                     Menu admin                   \n");
    printf("--------------------------------------------------\n");
    printf("1. Cadastro de usuário\n");
    printf("2. Cadastro de produtos (editar produtos)\n");
    printf("3. Visualizar produtos\n");
    printf("4. Visualizar vendas\n");
    printf("5. Voltar\n");
    printf("Escolha uma opção: ");
    scanf("%d", &opcao);
    
    switch(opcao) {
        case 1:
            cadastroUsuario();
            voltarMenuAnterior();
            break;
        case 2:
            cadastroProdutos();
            voltarMenuAnterior();
            break;
        case 3:
            visualizarProdutos();
            voltarMenuAnterior();
            break;
        case 4:
            visualizarVendas();
            voltarMenuAnterior();
            break;
        case 5:
            main();
            break;
        default:
            printf("Opção inválida!\n");
    }
}


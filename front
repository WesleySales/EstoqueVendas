#include <stdio.h>
#include <string.h>

#define USERNAME "client"
#define PASSWORD "senha123"
#define ADMIN_USERNAME "admin"
#define ADMIN_PASSWORD "admin123"

void sucessoCadastro() {
    printf("Cadastro realizado com sucesso! \n");
}

void adicionarProduto() {
    char produto[256];

    printf("Digite o nome do produto para adicionar: \n");
    scanf("%s", produto);
    // Aqui você pode adicionar o código para salvar o novo produto

    printf("Produto '%s' adicionado com sucesso!\n", produto);
}

void cadastro() {
    char username[256];
    char senha[256];

    printf("Crie um nome de usuário: \n");
    scanf("%s", username);
    printf("Crie uma senha: \n");
    scanf("%s", senha);

    // Aqui você pode adicionar o código para salvar os novos dados de usuário
    sucessoCadastro();
}

void loginCliente() {
    char username[256];
    char senha[256];

    printf("Digite o nome de usuário: \n");
    scanf("%s", username);
    printf("Digite a senha: \n");
    scanf("%s", senha);

    if (strcmp(username, USERNAME) == 0 && strcmp(senha, PASSWORD) == 0) {
        printf("Login de cliente realizado com sucesso!\n");
    } else {
        printf("Nome de usuário ou senha incorretos!\n");
    }
}

void loginAdmin() {
    char username[256];
    char senha[256];

    printf("Digite o nome de usuário do administrador: \n");
    scanf("%s", username);
    printf("Digite a senha do administrador: \n");
    scanf("%s", senha);

    if (strcmp(username, ADMIN_USERNAME) == 0 && strcmp(senha, ADMIN_PASSWORD) == 0) {
        printf("Login de administrador realizado com sucesso!\n");
        adicionarProduto();
    } else {
        printf("Nome de usuário ou senha de administrador incorretos!\n");
    }
}

int main() {
    int tipoUsuario;

    printf("Digite 1 para Administrador ou 2 para Cliente: \n");
    scanf("%d", &tipoUsuario);

    if (tipoUsuario == 1) {
        loginAdmin();
    } else if (tipoUsuario == 2) {
        int opcao;
        printf("Digite 1 para login ou 2 para cadastro: \n");
        scanf("%d", &opcao);

        if (opcao == 1) {
            loginCliente();
        } else if (opcao == 2) {
            cadastro();
        } else {
            printf("Opção inválida!\n");
        }
    } else {
        printf("Tipo de usuário inválido!\n");
    }

    return 0;
}